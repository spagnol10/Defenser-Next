{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@context/*": ["./app/lib/context/*"],
      "@components/*": ["./app/components/*"],
      "@radixStyled/*": ["./app/components/radixStyled/*"],
      "@api/*": ["./app/lib/api/*"],
      "@auth/*": ["./app/lib/api/auth/*"],
      "@hooks/*": ["./app/lib/hooks/*"],
      "@lib/*": ["./app/lib/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
